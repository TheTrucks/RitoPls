<Window x:Class="StatusTrackerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="350" Width="525" WindowStyle="None" ResizeMode="CanResizeWithGrip" MinWidth="425" MinHeight="250" AllowsTransparency="True">
    <Border BorderBrush="Black" BorderThickness="1.5">
        <Grid Background="#253545" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid Height="20" VerticalAlignment="Top" HorizontalAlignment="Stretch" Name="TitleBorder">
                <Canvas Height="20"  Background="#252525" HorizontalAlignment="Stretch"></Canvas>
                <TextBlock HorizontalAlignment="Center" TextAlignment="Center" Text="League Status Tracker" Foreground="#BBBBBB"></TextBlock>
            </Grid>
            <Frame Name="Pager" Margin="0, 21, 0, 0" Background="#253545" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" NavigationUIVisibility="Hidden">
            </Frame>
        </Grid>
    </Border>
</Window>
